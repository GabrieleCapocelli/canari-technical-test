{#                                                    <input type="text">#}
{#                                                </div>#}
{#                                            </div>#}
{#                                        </div>#}
{#                                    </div>#}
                                </div>

                                <div class="ctas-container">
                                    <a href="#" class="button medium purple update small-margin-right">Modifier la fiche</a>
                                    <a href="#" class="button medium transparent-red delete">Supprimer la fiche</a>
                                </div>

                                <div class="ctas-container">
                                    <a href="#" class="button medium purple save">Enregistrer la fiche</a>
                                    <a href="#" class="button medium transparent draft small-margin-left small-margin-right">Enregistrer la fiche</a>
                                    <a href="#" class="button medium red delete-red">Supprimer la fiche</a>
                                </div>

                            </form>
                        </div>

                    </section>
                </section>

            </article>

            {{ include('partials/_aside.html.twig') }}

        </div>
    </section>
{% endblock %}

